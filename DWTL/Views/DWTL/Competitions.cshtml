@model IEnumerable<DWTL.Models.Competition>
@{
    ViewBag.Title = "Competitions";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<div class="row">
    <table>
        <tr>
            <td>
                @Html.ActionLink("Create a Group", "CreateGroup")
            </td>
        </tr>
    </table>
</div>

<div class="row">
    
        @foreach (var item in Model)
        {
            <div class="col-md-4 comp_box">
                <h2>@item.Name</h2>
                <img src="http://placecorgi.com/260/180" />
                <div>
                    <h3>Pot: $@item.Pot</h3>
                </div>
                @Html.ActionLink("Details", "Details", new { id = item.CompetitionId })
            </div>
        }
</div>




