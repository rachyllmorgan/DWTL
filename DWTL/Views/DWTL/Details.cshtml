@model DWTL.Models.DownUserCompetitions
@{
    Layout = "~/Views/Shared/_DownLayout.cshtml";
}
<div>
    <h3>@Model.comps.Name</h3>
    <div class="row">
        <div class="col-lg-4 prof_pic">
            <img src="http://placecorgi.com/400/300" />
            @Html.ActionLink(" Join the Competition", "Join")
        </div>
        <div class="col-lg-5">
            <h4>This group was created by @Model.comps.DownUserId!</h4>
            <h4>Price per Participant: $@Model.comps.Bet</h4>
            @*<h4>Other Participants: @Model.members.</h4>*@
        </div>
    </div>
</div>
